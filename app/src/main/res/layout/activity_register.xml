<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.uuj.moviebuddy.RegisterActivity">

    <ImageView
        android:id="@+id/imageView_Logo1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logoo" />

    <EditText
        android:id="@+id/editText_Username1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView_Logo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#11000000"
        android:drawableStart="@drawable/ic_action_username"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText_Email1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editText_Username1"
        android:layout_below="@+id/editText_Username1"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="#11000000"
        android:drawableStart="@drawable/ic_action_email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText_Password1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editText_Email1"
        android:layout_below="@+id/editText_Email1"
        android:layout_marginTop="10dp"
        android:background="#11000000"
        android:drawableStart="@drawable/ic_action_password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/button_Register"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText_Password1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:background="@drawable/mybutton"
        android:textColor="#fff"
        android:textSize="16sp"
        android:text="Register" />

    <Button
        android:id="@+id/button_Register1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:text="Return to Login"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

</RelativeLayout>
