<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.uuj.moviebuddy.AccountActivity">


    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Account"
            android:textAlignment="center"
            android:textSize="30sp"    />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mainContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomBar"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/userInfo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:background="@drawable/border">

            <Button
                android:id="@+id/button_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:text="Logout"
                android:layout_gravity="right"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="132dp"
                android:layout_height="142dp"
                android:paddingLeft="20dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/TextView_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@android:color/transparent"
                android:text="Example"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/TextView_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@android:color/transparent"
                android:text="example@example.com"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/otherStuff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60">

            <LinearLayout
                android:id="@+id/otherinfo"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:weightSum="100"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/emailaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Report Issues"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/emailaddress1"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="moviebuddydev@gmail.com"
                    android:textSize="14sp"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/subject1"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Subject"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/message1"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5"
                    android:hint="Message"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/button_send"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/mybutton"
                    android:text="Send"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="14sp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/options1"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <EditText
                    android:id="@+id/donateamount"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Enter Amount"/>

                <Button
                    android:id="@+id/button_options1_1"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/mybutton"
                    android:text="Donate"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/options2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/button_options2_1"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/mybutton"
                    android:text="Watchlist"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/button_options2_2"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/mybutton"
                    android:text="Edit Info"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">

        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottomNavView"
            android:background="@drawable/toolbar_border"
            app:menu="@menu/bottom_navigation_menu">

        </android.support.design.widget.BottomNavigationView>

    </RelativeLayout>

</RelativeLayout>